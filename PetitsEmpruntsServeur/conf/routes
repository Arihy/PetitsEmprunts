# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET 	/login						controllers.Application.login()
POST 	/login						controllers.Application.checkLoginInfos()
GET 	/logout						controllers.Application.logout()
GET 	/register					controllers.Application.register()

#UserProfile
GET 	/myProfile					controllers.UserProfile.index()

#Users
GET 	/users 						controllers.Application.userAccounts()
POST 	/users 						controllers.Application.newUserAccount()
GET		/user/:nickname				controllers.UserProfile.seeUserAccount(nickname: String)
GET		/user/:nickname/possessions	controllers.UserProfile.seeUserPossession(nickname: String)


#Borrows
POST	/newBorrow					controllers.UserProfile.newBorrow()

#Possessions
POST	/newPossession				controllers.UserProfile.newPossession()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
